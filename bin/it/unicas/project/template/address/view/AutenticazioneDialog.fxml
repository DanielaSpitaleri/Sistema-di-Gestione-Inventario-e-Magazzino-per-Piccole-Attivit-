<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" styleClass="background" stylesheets="@DarkTheme.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.AutenticazioneDialogController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Verifica i permessi" styleClass="label-header"/>
            <PasswordField fx:id="campoInserimento" promptText="Inserisci Password"/>
            <Button mnemonicParsing="false" onAction="#handleInserimento" text="Accedi" defaultButton="true"/>
            <Label fx:id="messaggiErrore" text="" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>