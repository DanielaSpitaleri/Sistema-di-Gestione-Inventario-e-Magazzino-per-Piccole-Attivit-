<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="360.0" prefWidth="450.0" styleClass="background" stylesheets="@DarkTheme.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.ProdottiEditDialogController">
    <children>
        <GridPane layoutX="30.0" layoutY="28.0"
                  prefHeight="300.0" prefWidth="404.0"
                  AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0"
                  AnchorPane.topAnchor="10.0">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="218.0" minWidth="10.0" prefWidth="111.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="316.0" minWidth="10.0" prefWidth="261.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Nome -->
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Descrizione -->
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Quantità -->
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Giacenza Min -->
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Prezzo Acquisto -->
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/> <!-- Prezzo Vendita -->
            </rowConstraints>

            <children>

                <Label text="Nome"/>
                <TextField fx:id="nomeField" GridPane.columnIndex="1"/>

                <Label text="Descrizione" GridPane.rowIndex="1"/>
                <TextField fx:id="descrizioneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Quantità" GridPane.rowIndex="2"/>
                <TextField fx:id="quantitaField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Giacenza Minima" GridPane.rowIndex="3"/>
                <TextField fx:id="giacenzaMinField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Prezzo Acquisto (€)" GridPane.rowIndex="4"/>
                <TextField fx:id="prezzoAcquistoField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Prezzo Vendita (€)" GridPane.rowIndex="5"/>
                <TextField fx:id="prezzoVenditaField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            </children>

        </GridPane>

        <ButtonBar layoutX="176.0" layoutY="233.0"
                   AnchorPane.bottomAnchor="10.0"
                   AnchorPane.rightAnchor="10.0">

            <buttons>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleOk" text="OK"/>
                <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="120.0" text="Cancel"/>
            </buttons>

        </ButtonBar>
    </children>
</AnchorPane>
