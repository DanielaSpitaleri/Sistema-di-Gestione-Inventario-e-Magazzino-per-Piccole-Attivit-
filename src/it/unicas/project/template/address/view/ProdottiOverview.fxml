<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.ProdottiOverviewController">
    <children>

        <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>

                <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                    <items>

                        <AnchorPane styleClass="background">
                            <children>
                                <Label layoutX="14.0" styleClass="label-header" text="Elenco Prodotti"
                                       AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="0.0"/>

                                <TableView fx:id="prodottiTableView" AnchorPane.bottomAnchor="50.0"
                                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                           AnchorPane.topAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="nomeColumn" prefWidth="75.0" text="Nome"/>
                                        <TableColumn fx:id="descrizioneColumn" prefWidth="75.0" text="Descrizione"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>

                                <HBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="10.0"
                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleSearchProdotti"
                                                text="Ricerca"/>
                                        <Button mnemonicParsing="false" onAction="#handleNewProdotto" text="Aggiungi"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>

                        <AnchorPane styleClass="background">
                            <children>
                                <Label layoutX="5.0" styleClass="label-header" text="Dettagli Prodotto"
                                       AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="0.0"/>

                                <GridPane AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="5.0"
                                          AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="60.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="150.0"/>
                                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints prefHeight="30.0"/>
                                        <RowConstraints prefHeight="30.0"/>
                                        <RowConstraints prefHeight="30.0"/>
                                        <RowConstraints prefHeight="30.0"/>
                                        <RowConstraints prefHeight="30.0"/>
                                        <RowConstraints prefHeight="30.0"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nome"/>
                                        <Label text="Descrizione" GridPane.rowIndex="1"/>
                                        <Label text="Quantità" GridPane.rowIndex="2"/>
                                        <Label text="Giacenza Minima" GridPane.rowIndex="3"/>
                                        <Label prefHeight="39.0" prefWidth="191.0" text="Prezzo Acquisto"
                                               GridPane.rowIndex="4"/>
                                        <Label text="Prezzo Vendita" GridPane.rowIndex="5"/>

                                        <Label fx:id="nomeLabel" styleClass="label-bright" GridPane.columnIndex="1"/>
                                        <Label fx:id="descrizioneLabel" styleClass="label-bright" wrapText="true"
                                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label fx:id="quantitaLabel" styleClass="label-bright" GridPane.columnIndex="1"
                                               GridPane.rowIndex="2"/>
                                        <Label fx:id="giacenzaMinimaLabel" styleClass="label-bright"
                                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                        <Label fx:id="prezzoAcquistoLabel" styleClass="label-bright"
                                               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                        <Label fx:id="prezzoVenditaLabel" styleClass="label-bright"
                                               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                    </children>
                                </GridPane>

                                <VBox alignment="CENTER_RIGHT" spacing="5.0" AnchorPane.bottomAnchor="10.0"
                                      AnchorPane.rightAnchor="10.0" xmlns:fx="http://javafx.com/fxml">
                                    <children>
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button onAction="#handleMoveProdotto" prefWidth="200.0"
                                                        minWidth="200.0" maxWidth="200.0" text="CARICO/SCARICO"/>
                                                <Button onAction="#handleEditProdotti" text="Modifica"/>
                                                <Button onAction="#handleDeleteProdotto" prefWidth="120.0"
                                                        text="Elimina"/>
                                            </children>
                                        </HBox>

                                        <HBox fx:id="statusContainer" alignment="CENTER_RIGHT" managed="false"
                                              spacing="8.0" visible="false">
                                            <children>
                                                <Region fx:id="statusSquare" maxHeight="15.0" maxWidth="15.0"
                                                        minHeight="15.0" minWidth="15.0" prefHeight="15.0"
                                                        prefWidth="15.0" style="-fx-background-radius: 2;"/>
                                                <Label fx:id="statusLabel" style="-fx-font-size: 10pt;"
                                                       styleClass="label-bright" text="Stato"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                        </AnchorPane>

                    </items>
                </SplitPane>

                <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                    <items>
                        <AnchorPane styleClass="background">
                            <children>
                                <Label layoutX="14.0" styleClass="label-header" text="Criticità"
                                       AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="0.0"/>
                                <TableView fx:id="criticitaTableView" AnchorPane.bottomAnchor="10.0"
                                           AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                                           AnchorPane.topAnchor="60.0" focusTraversable="false">
                                    <columns>
                                        <TableColumn fx:id="nomeCriticoColumn" prefWidth="75.0" text="Prodotto"/>
                                        <TableColumn fx:id="quantitaCriticaColumn" prefWidth="75.0" text="Mancanti"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>

                        <AnchorPane styleClass="background ">
                            <children>
                                <Label layoutX="14.0" styleClass="label-header" text="Ultimi Movimenti"
                                       AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="0.0"/>
                                <TableView fx:id="movimentiTableView" AnchorPane.bottomAnchor="10.0"
                                           AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                                           AnchorPane.topAnchor="60.0" focusTraversable="false">
                                    <columns>
                                        <TableColumn fx:id="dataMovimentoColumn" prefWidth="75.0" text="Data"/>
                                        <TableColumn fx:id="nomeProdottoMovimentoColumn" prefWidth="75.0"
                                                     text="Prodotto"/>
                                        <TableColumn fx:id="tipoMovimentoColumn" prefWidth="50.0" text="Tipo"/>
                                        <TableColumn fx:id="quantitaMovimentoColumn" prefWidth="50.0" text="Qta"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>

            </items>
        </SplitPane>

    </children>
</AnchorPane>