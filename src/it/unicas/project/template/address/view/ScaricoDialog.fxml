<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" styleClass="background" stylesheets="@DarkTheme.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.ScaricoDialogController">
    <children>
        <GridPane layoutX="30.0" layoutY="28.0" prefHeight="320.0" prefWidth="440.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="130.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="300.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="60.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <children>
                <Label text="Prodotto:"/>
                <Label fx:id="nomeProdottoLabel" styleClass="label-bright" GridPane.columnIndex="1"/>

                <Label text="Quantità attuale:" GridPane.rowIndex="1"/>
                <Label fx:id="quantitaAttualeLabel" styleClass="label-bright" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>

                <Label text="Tipo di movimento:" GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="movimentoChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="CARICO"/>
                            <String fx:value="SCARICO"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <Label text="Quantità in movimento:" GridPane.rowIndex="3"/>
                <TextField fx:id="quantitaTextField" promptText="Inserisci numero" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>

                <Label text="Data Operazione:" GridPane.rowIndex="4"/>
                <DatePicker fx:id="datePicker" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Descrizione:" GridPane.rowIndex="5" GridPane.valignment="TOP"/>
                <TextArea fx:id="descrizioneTextArea" prefHeight="200.0"
                          promptText="Dettagli aggiuntivi..." wrapText="true" GridPane.columnIndex="1"
                          GridPane.rowIndex="5"/>
            </children>
        </GridPane>

        <ButtonBar AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <buttons>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleOk" text="Conferma"/>
                <Button mnemonicParsing="false" onAction="#handleCancel" text="Annulla"/>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>